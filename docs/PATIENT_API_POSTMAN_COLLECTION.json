{
  "info": {
    "name": "Patient API Collection",
    "description": "Collection for testing Patient API endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{auth_token}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8000/api",
      "type": "string"
    },
    {
      "key": "auth_token",
      "value": "",
      "type": "string"
    },
    {
      "key": "doctor_id",
      "value": "1",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.environment.set('auth_token', jsonData.data.token || jsonData.token);",
                  "    pm.collectionVariables.set('auth_token', jsonData.data.token || jsonData.token);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"patient@test.com\",\n  \"password\": \"password\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/login",
              "host": ["{{base_url}}"],
              "path": ["login"]
            }
          }
        }
      ]
    },
    {
      "name": "Medications",
      "item": [
        {
          "name": "Register Medication",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}",
                "type": "text"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"medication_name\": \"Aspirin\",\n  \"dose\": \"100mg\",\n  \"frequency\": \"Once daily\",\n  \"duration\": \"7 days\",\n  \"start_date\": \"2024-01-01\",\n  \"end_date\": \"2024-01-08\",\n  \"patient_notes\": \"Take with food\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/patient/medications",
              "host": ["{{base_url}}"],
              "path": ["patient", "medications"]
            }
          }
        },
        {
          "name": "Get All Medications",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/patient/medications",
              "host": ["{{base_url}}"],
              "path": ["patient", "medications"]
            }
          }
        }
      ]
    },
